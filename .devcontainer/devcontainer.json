{
  "name": "Python Pygame with GraalVM",
  // Base image with Python and standard tools
  "image": "mcr.microsoft.com/devcontainers/python:3.12", 
  
  "features": {
    // 1. Install necessary system dependencies for Pygame/SDL graphics
    "ghcr.io/devcontainers/features/apt-get-packages:1": {
      "packages": "libsdl2-dev, libsdl2-image-dev, libsdl2-mixer-dev, libsdl2-ttf-dev, python3-dev, build-essential"
    },
    // 2. Install GraalVM for Native Image compilation (version 21 recommended for stability)
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21-graal",
      "installGraalVMNativeImage": true
    },
    // 3. Install common utilities
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  
  "postCreateCommand": "pip install pygame",
  
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh"
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "vscjava.vscode-java-pack"
      ]
    }
  }
}
